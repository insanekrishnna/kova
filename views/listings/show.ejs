<% layout("/layouts/boilerplate") %>
<body>
<div class="row">
    <div class="col-8 offset-3 mt-3" >
    
        <h3><%=listing.title%></h3>
    </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body mt-2">
                <p class="card-text">  
                  <%=listing.description%> <br>
                  &#8377; <%=listing.price.toLocaleString("en-IN") %>/night <br>
                   <%=listing.location%> <br>
                    <%=listing.country%>
                  
                </p>
            </div>
        </div>

        <br>
        
        </div>
        
        <div class="btns">
        <a href="/listings/<%= listing._id  %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
        
        
        <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE"> <div> <button class="btn btn-dark offset-5 edit-btn"><i class="fa-regular fa-trash-can"></i></button></div>
        </form>
        </div>
        <hr>
        <div class="col-8 offset-3 mb-3" >
            <h4> Feel free to drop a review !</h4>
            <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 ">
                    <label for="rating" class="form-label"> Rating </label>
                    <input type="range" class="form-range" id="rating" name="review[rating]" min="1" max="5" step="1">
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comment <i class="fa-regular fa-message"></i> </label>
                    <textarea id="comment" name="review[comment]" rows="2" cols="30" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please provide your Feedback !</div>
                </div>
                <button class="btn btn-outline-dark">Submit <i class="fa-regular fa-circle-check"></i></button>
            </form>
        </div>

    </body>