<% layout("/layouts/boilerplate") %>
<body>
<div class="row">
    <div class="col-8 offset-3 mt-3" >
    
        <h3><%=listing.title%></h3>
    </div>
        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body mt-2">
                <p class="card-text">  
                  <%=listing.description%> <br>
                  &#8377; <%=listing.price.toLocaleString("en-IN") %>/night <br>
                   <%=listing.location%> <br>
                    <%=listing.country%>
                  
                </p>
            </div>
        </div>

        <br>
        
        </div>
        
        <div class="btns">
        <a href="/listings/<%= listing._id  %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
        
        
        <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE"> <div> <button class="btn btn-dark offset-5 edit-btn"><i class="fa-regular fa-trash-can"></i></button></div>
        </form>
        </div>
        <hr>
        <div class="col-8 offset-3 mb-3" >
            <h4> Feel free to drop a review !</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="rating">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
    </div>
    <div class="mb-3">
        <label for="comment">Comment</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
    </div>
    <button class="btn btn-outline-dark">Submit</button>
</form>

            <hr>
            <p><b>Reviews:</b></p>
            <div class="row">
        
            

                 <% for ( review of listing.reviews) { %>
                <div class="card col-5 ms-2 mb-3">  
                    <div class="card-body">
                        <h5 class="card-title"> john doe</h5>
                         <p class="card-text"><%= review.comment %></p>
                         <p class="card-text"><%= review.rating %> Stars</p>
                    </div>
                     <form class="mb-2" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="btn  btn-sm btn-dark">Delete</button>
                </form>
                </div>
                <% } %>
            </div>
        </div>

    </body>