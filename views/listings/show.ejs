<% layout("/layouts/boilerplate") %>
<body>
<div class="container my-5 px-3">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      
      <!-- Card -->
      <div class="card border-0 shadow-lg ps-4 pe-4 pt-4 pb-3 rounded-4 overflow-hidden bg-light-tertiary">
        
        <!-- Image -->
        <img 
          src="<%= listing.image.url %>" 
          alt="listing_image" 
          class="card-img-top object-fit-cover" 
          style="height: 330px;"
        >

        <!-- Card Body -->
        <div class="card-body p-4">
          <h4 class="fw-semibold text-dark mb-2 text-capitalize">
            <%= listing.title %>
          </h4>
          <p class="text-muted small mb-2">
            Owned by <span class="fst-italic"><%= listing.owner.username %></span>
          </p>

          <p class="text-secondary small lh-sm mb-4">
            <%= listing.description %>
          </p>

          <div class="border-top pt-3">
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-sm-center gap-2">
              <div>
                <h6 class="fw-semibold text-dark mb-0">
                  â‚¹<%= listing.price.toLocaleString("en-IN") %>
                  <span class="text-muted fw-normal">/night</span>
                </h6>
                <small class="text-muted">
                  <%= listing.location %>, <%= listing.country %>
                </small>
              </div>
              <a href="#" class="btn btn-dark btn-sm rounded-pill px-4 w-100 w-sm-auto shadow-none">
                Book Now
              </a>
            </div>
              <!-- Edit/Delete buttons (owner only) -->
      <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
      <div class="d-flex justify-content-between align-items-center mt-4 ">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-dark btn-sm rounded-3 px-4 shadow-none me-2">
          Edit
        </a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="m-0">
          <button class="btn btn-outline-danger btn-sm rounded-3 px-3 shadow-none" onclick="return confirm('Are you sure you want to delete this listing?');">
            <i class="fa-regular fa-trash-can"></i>
          </button>
        </form>
      </div>
      <% } %>
          </div>
        </div>
      </div>

    

    </div>
  </div>
</div>
        
        <div class="col-8 offset-2 mb-3" >
            <% if(currentUser) { %> 
            <h4 class="fw-semibold ps-3 pe-3 pt-2 pb-2  fs-5  text-dark border-3 shadow-none  border-0 font-weight-bold  mb-3 "> Feel free to drop a review !</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
    <div class="mb-3  ">
        <label for="rating" class="ms-1">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range ms-1">
        <fieldset class="starability-slot">
          
  <legend>First rating:</legend>
  <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="rating" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="rating" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="rating" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="rating" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="rating" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
    </div>
    <div class="container my-4">
    <div class="mb-3 ">
        <label for="comment" class="form-label fw-semibold small text-muted"> <i class="bi bi-chat-dots me-1"></i>Comment </label>
        <textarea name="review[comment]" id="comment" cols="30" rows="3" class="form-control shadow-sm border-0 rounded-3 p-3 bg-light-subtle " required></textarea>
    </div>
    <button class="btn btn-dark btn-sm rounded-1 px-4 shadow-sm">Submit</button>
    </form>
    </div>
    <% } %>

            <hr>
            <div class=" col-12 mb-5">
            <p><b>Reviews <i class="fa-solid fa-fingerprint"></i></b></p>
            <div class="row">
        
            

                 <% for ( review of listing.reviews) { %>
                <div class="card col-5 ms-2 me-3 mb-3 p-3 border-1 rounded-3 mx-auto shadow-sm bg-white my-2">  
                    <div class="card-body card border-0">
                        <h6 class="card-title fw-bold text-dark mb-1">
  <b>@<%= review.author ? review.author.username : 'Unknown' %></b>
</h6>
<p class="card-text text-muted small mb-2"><%= review.comment %></p>
<p class="card-text badge bg-light text-dark border small mb-3"><%= review.rating %> Stars</p>
                         <!-- <div class="mb-3">
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star text-warning"></i>
                            <i class="bi bi-star text-warning"></i>
                        </div> -->

                    </div>
                     <form class="mb-2" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="btn rounded-2 px-3 btn-sm btn-dark">Delete</button>
                </form>
                </div>
                <% } %>
            </div>
        </div>
       

    </body>