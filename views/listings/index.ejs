<% layout("/layouts/boilerplate") %>
<style>
/* NAVBAR WRAPPER */
#filters {
    display: flex;
    gap: clamp(1rem, 3vw, 2rem);
    align-items: center;
    justify-content: center;
    background: linear-gradient(145deg, #1d1d1f, #262628);
    padding: 0.5rem 2rem;
    border-radius: 2.8rem;
    width: fit-content;
    margin: 1.6rem auto 3.5rem;
    backdrop-filter: blur(100px);
    box-shadow: 0 12px 36px rgba(0, 0, 0, 0.25);
    border: 1px solid rgb(255, 255, 255);
    overflow-x: auto;
    scrollbar-width: none;
}

#filters::-webkit-scrollbar {
    display: none;
}

/* NAV ITEMS */
.filter {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.2rem;
    cursor: pointer;
    opacity: 0.9;
    transition: opacity 0.25s ease, transform 0.25s ease;
    position: relative;
    min-width: fit-content;
}

.filter:hover {
    opacity: 1;
}

/* ACTIVE STATE */
.filter.active {
    opacity: 1;
    transform: translateY(-2px);
}

/* ICONS */
.filter div {
    font-size: clamp(1rem, 2vw, 1.1rem);
    color: #b7bcc4;
}

.filter.active div {
    color: #ffffff;
    filter: drop-shadow(0 0 6px rgba(255, 255, 255, 0.45));
}

/* TEXT LABEL */
.filter p {
    font-size: clamp(0.78rem, 2vw, 0.9rem);
    font-weight: 500;
    margin: 0;
    color: #9fa6b2;
}

.filter.active p {
    color: #fff;
}

/* BADGE */
.filter .badge {
    position: absolute;
    top: -12px;
    right: -14px;
    background: rgba(255, 120, 245, 0.75);
    backdrop-filter: blur(10px);
    color: #fff;
    font-size: 0.62rem;
    padding: 2px 6px;
    border-radius: 8px;
    font-weight: 700;
    letter-spacing: -0.3px;
    box-shadow: 0 0 10px rgba(255, 130, 250, 0.6);
    border: 1px solid rgba(255,255,255,0.25);
}

</style>

<div id="filters" >
    <div class="filter active" data-category="">
       <div><i class="fa-solid fa-fire"></i></div> 
        <p>Trending</p>
    </div>
    <div class="filter" data-category="Rooms">
       <div><i class="fa-solid fa-bed"></i></div> 
        <p>Rooms</p>
    </div>
    <div class="filter" data-category="cities">
       <div><i class="fa-solid fa-tree-city"></i></div> 
        <p>Iconic Cities</p>
    </div>
    <div class="filter" data-category="mountains">
       <div><i class="fa-solid fa-mountain-sun"></i></div> 
        <p>Mountains</p>
    </div>
    <div class="filter" data-category="Historical">
       <div><i class="fa-brands fa-fort-awesome-alt"></i></div> 
        <p>Castles</p>
    </div>
    <div class="filter" data-category="Beach">
       <div><i class="fa-solid fa-water-ladder"></i></div> 
        <p>Pools</p>
    </div>
    <div class="filter" data-category="Wildlife">
       <div><i class="fa-solid fa-campground"></i></div> 
        <p>Camping</p>
    </div>
    <div class="filter" data-category="farms">
       <div><i class="fa-solid fa-tractor"></i></div> 
        <p>Farms</p>
    </div>
    <div class="filter" data-category="arctic">
       <div><i class="fa-solid fa-igloo"></i></div> 
        <p>Arctic</p>
    </div>
</div>

<div id="listings-container" class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mb-4">
    <% for (let listing of allListings) { %>
        <div class="col listing-item" data-category="<%= listing.category %>">
            <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
                <div class="fancy-card">
                    <div class="fancy-card-img">
                        <img src="<%= listing.image.url %>" alt="Listing Image">
                        <span class="price-tag">
                            â‚¹<%= listing.price.toLocaleString("en-IN") %>/day
                        </span>
                    </div>
                    <div class="fancy-card-info">
                        <div>
                            <b><h6 class="fw-semibold mb-1 listing-title"><%= listing.title %></h6></b>
                            <p class="small-text card-des"><%= listing.description %></p>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div class="d-flex align-items-start gap-2 flex-grow-1">
                                <div class="rounded-circle d-flex align-items-center justify-content-center shadow" style="width: 36px; height: 36px; background:#efefef;">
                                    <i class="fa-solid fa-location-dot text-dark"></i>
                                </div>
                                <div class="lh-sm" style="white-space: nowrap;">
                                    <div class="fw-semibold text-dark"><%= listing.location %></div>
                                    <div class="text-muted small"><%= listing.country %></div>
                                </div>
                            </div>
                            <div class="nav-btn" style="flex-shrink: 0; background:#efefef;">
                                <i class="bi bi-send-fill"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    <% } %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.filter');
    const listingItems = document.querySelectorAll('.listing-item');
    
    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            const selectedCategory = this.getAttribute('data-category');
            
            // Update active button
            filterButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');
            
            // Filter listings
            let visibleCount = 0;
            listingItems.forEach(item => {
                const itemCategory = item.getAttribute('data-category');
                
                if (selectedCategory === '' || itemCategory === selectedCategory) {
                    item.style.display = 'block';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });
            
            if (visibleCount === 0) {
                console.log('No listings found for category:', selectedCategory);
            }
        });
    });
});
</script>


