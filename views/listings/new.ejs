<style>
:root {
  --background: #F5F6F7;
  --card-bg: #FFFFFF;
  --border-soft: #E6E7E9;
  --text-dark: #1B1D1F;
  --text-muted: #59616B;
  --radius: 20px;
}

/* Page base */
body {
  background: var(--background) !important;
 
}

/* Main Card Wrapper */
.col-8.offset-2 {
  background: var(--card-bg);
  border-radius: var(--radius);
  padding: 1rem 1.2rem;
  border: 1px solid var(--border-soft);
  box-shadow: 0px 12px 32px rgba(0,0,0,0.05);
}

/* Heading */
h3 {
  font-size: 1.5rem;
  font-weight: 800;
  color: var(--text-dark);
  margin-bottom: 1.3rem;
  text-align: left;
}

/* Labels */
.form-label {
  font-size: .75rem;
  color: var(--text-muted);
  font-weight: 700;
}

/* Inputs + Select */
.form-control, select {
  border-radius: 10px !important;
  padding: 0.5rem 0.3rem !important;
  background: #fff !important;
  border: 1px solid var(--border-soft) !important;
  transition: all .25s ease;
  font-size: 0.8rem !important;
}

.form-control:focus, select:focus {
  border-color: #141414 !important;
  box-shadow: 0 0 0 4px rgba(0,0,0,0.08) !important;
}

/* Margin between elements */
.mb-3 {
  margin-bottom: 1rem !important;
}

/* Submit Button */
.btn.btn-dark {
  width: 100%;
  background: #111 !important;
  padding: .75rem !important;
  border-radius: 50px !important;
  font-size: 0.8rem !important;
  font-weight: 600;
  border: none !important;
  transition: all .25s ease;
  letter-spacing: .3px;
}

/* Button Hover */
.btn.btn-dark:hover {
  filter: brightness(1.1);
  transform: translateY(-3px);
  box-shadow: 0px 8px 26px rgba(0,0,0,0.18);
}

/* Validation Text */
.invalid-feedback {
  font-size: 0.8rem;
  color: #D0342C !important;
}
</style>

<body>
    <% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2 mt-2 mb-4">
    <h3>Create a New Listing</h3>
    <form action="/listings" method="POST" enctype="multipart/form-data" novalidate class="needs-validation">
      
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" id="title" name="listing[title]" class="form-control" required>
        <div class="invalid-feedback">Title is required</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" name="listing[description]" class="form-control" rows="3" required></textarea>
        <div class="invalid-feedback">Description is required</div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" id="location" name="listing[location]" class="form-control" required>
        <div class="invalid-feedback">Location is required</div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input type="text" id="country" name="listing[country]" class="form-control" required>
        <div class="invalid-feedback">Country is required</div>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price (â‚¹/night)</label>
        <input type="number" id="price" name="listing[price]" class="form-control" min="0" required>
        <div class="invalid-feedback">Price is required</div>
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select id="category" name="listing[category]" class="form-control" required>
          <option value="">Select a category</option>
          <option value="mountains">Mountains</option>
          <option value="arctic">Arctic</option>
          <option value="farms">Farms</option>
          <option value="desserts">Desserts</option>
          <option value="Family">Family</option>
          <option value="cities">Cities</option>
          <option value="Wildlife">Wildlife</option>
          <option value="Beach">Beach</option>
          <option value="Historical">Historical</option>
          <option value="Rooms">Rooms</option>
          <option value="Other">Other</option>
        </select>
        <div class="invalid-feedback">Category is required</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input type="file" id="image" name="listing[image]" class="form-control" accept="image/*" required>
        <div class="invalid-feedback">Image is required</div>
      </div>

      <button type="submit" class="btn btn-dark">Add</button>
    </form>
  </div>
</div>

</body>

</html>