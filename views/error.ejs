<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="alert alert-danger mt-3 col-6 offset-3" role="alert">
    <h4 class="alert-heading">Error!</h4>
    <p><%= message || "Something went wrong" %></p>
    <% if (err && err.stack) { %>
      <hr>
      <small class="text-muted"><pre><%= err.stack %></pre></small>
    <% } %>
  </div>
</div>
